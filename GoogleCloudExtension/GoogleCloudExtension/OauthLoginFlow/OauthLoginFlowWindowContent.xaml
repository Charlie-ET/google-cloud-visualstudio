<UserControl x:Class="GoogleCloudExtension.OauthLoginFlow.OauthLoginFlowWindowContent"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GoogleCloudExtension.OauthLoginFlow"
             mc:Ignorable="d" 
             d:DataContext="{d:DesignInstance {x:Type local:OAuthLoginFlowViewModel}}" d:DesignHeight="300" d:DesignWidth="300">
    <StackPanel Margin="5">
        <TextBlock TextWrapping="Wrap">
            A browser window has been opened for you to enter your credentials, if you wish to cancel this operation just close
            the browser close this window. When the credentials operation is finished this window will close automatically.
        </TextBlock>

        <Button HorizontalAlignment="Left"
                Command="{Binding CloseCommand}"
                Margin="0,5,0,0" Padding="5">Cancel</Button>
    </StackPanel>
</UserControl>
